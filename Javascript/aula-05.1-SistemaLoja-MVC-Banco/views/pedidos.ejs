<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Cadastrar pedidos</h1>
        </div>
    </div>
    <div class="card-body">
        <form action="/pedidos/new" method="POST">
            <label>Numero do pedido:</label>
            <input type="number" name="numero" id="numero" placeholder="Insira o numero do pedido" class="form-control" required>

            <label>Valor do pedido:</label>
            <input type="number" name="valor" id="valor" placeholder="Insira o valor do pedido" class="form-control" required>

            <input type="submit" class="btn btn-success" value="Cadastrar">
        </form>
        <hr>
    </div>
</div>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h1>Pedidos</h1>
                </div>
                <div class="card-body">
                    <table>
                        <thead>
                            <tr>
                                <th></th>
                                <th>Numero:</th>
                                <th>Valor:</th>
                                <th colspan="2">Ações:</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pedidos.forEach(pedido=> { %>
                                <tr>
                                    <td><img src="imgs/order.png" width="30px"></td>
                                    <td>
                                        <%= pedido.numero %>
                                    </td>
                                    <td>
                                        <%= pedido.valor %>
                                    </td>
                                    <td><a style="color: chocolate;" href="/pedidos/edit/<%= pedido.id %>">Editar</a></td>
                                    <td><a style="color: crimson;" href="/pedidos/delete/<%= pedido.id %>" onclick="return confirm('Quer mesmo deletar o Pedido <%= pedido.numero %>?')">Deletar</a></td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

<%- include ('partials/footer.ejs') %>
